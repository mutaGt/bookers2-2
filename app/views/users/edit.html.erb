<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <%= f.label "Name" %><br>
        <%= f.text_field :name, style: "width: 30%" %><br>
        <%= f.label "Image" %><br>
        <%= f.file_field :profile_image %><br>
        <%= f.label "Introduction" %><br>
        <%= f.text_area :introduction, style: "width: 30%" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>