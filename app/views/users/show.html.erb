<div class="container">
  <div class="row mt-3">
    <div class="col">
      <%= render "userinfo", user: @user, profile_image: @profile_image %>
    </div>
    <div class="col-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @user.books.each do |book| %> <!--%の後に常に=を入れてしまう癖がある為注意する事。 =を入れてしまうと余計なものが表示される-->
        <tr>
          <td><%= image_tag @user.get_profile_image(80, 80) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>