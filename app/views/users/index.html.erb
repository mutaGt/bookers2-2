<div class="container">
  <div class="row mt-3">
    <div class="col">
      <%= render "userinfo", user: @user, profile_image: @profile_image %>
    </div>
    <div class="col-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>