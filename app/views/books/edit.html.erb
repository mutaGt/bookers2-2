<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <%= f.label "Title" %><br>
        <%= f.text_field :title, style: "width: 30%" %><br>
        <%= f.label "Opinion" %><br>
        <%= f.text_area :body, style: "width: 30%" %><br>
        <%= f.submit "Update Book", class: "btn btn-success" %><br>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>